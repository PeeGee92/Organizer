<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="peegee.fullorganizer">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".alarm.AlarmActivity"
            android:label="@string/title_activity_alarm"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".alarm.AddAlarm" />

        <receiver android:name=".alarm.AlarmReceiver" />

        <service
            android:name=".alarm.RingtonePlayingService"
            android:enabled="true" />

        <activity android:name=".todo.TodoActivity" />
        <activity android:name=".todo.AddTodoList" />
        <activity
            android:name=".notes.NotesActivity"
            android:label="@string/title_activity_notes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".notes.AddNote" />
        <activity
            android:name=".reminder.ReminderActivity"
            android:label="@string/title_activity_reminder"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".reminder.AddReminder"></activity>
    </application>

</manifest>